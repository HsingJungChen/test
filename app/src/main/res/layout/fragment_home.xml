<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/text_home"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@color/purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="centerInside"
            android:src="@drawable/home_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WILLIAM"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toRightOf="@id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/dept_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="技術部"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toRightOf="@id/imageView3"
            app:layout_constraintTop_toTopOf="@id/name"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工程師"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/dept_name"
            app:layout_constraintTop_toTopOf="@id/name"/>
        <ImageView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/background_radius"
            app:layout_constraintTop_toBottomOf="@id/dept_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/img_clock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home_clock"
            app:layout_constraintStart_toStartOf="@id/time"
            app:layout_constraintTop_toBottomOf="@id/dept_name"
            app:layout_constraintTop_toTopOf="@id/time"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/txt_title_in"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="進卡"
            android:textSize="15dp"
            android:textColor="@color/gray"
            app:layout_constraintLeft_toRightOf="@id/img_clock"
            app:layout_constraintTop_toBottomOf="@id/dept_name"
            app:layout_constraintTop_toTopOf="@id/time"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txt_in_time"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="09:00"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/img_clock"

            app:layout_constraintTop_toTopOf="@id/txt_title_in"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txt_title_out"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="出卡"
            android:textSize="15dp"
            android:textColor="@color/gray"
            app:layout_constraintLeft_toRightOf="@id/txt_title_in"
            app:layout_constraintTop_toBottomOf="@id/dept_name"
            app:layout_constraintTop_toTopOf="@id/time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txt_out_time"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="16:00"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/txt_in_time"
            app:layout_constraintTop_toTopOf="@id/txt_title_in"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/img_day"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home_day"
            app:layout_constraintLeft_toRightOf="@id/txt_out_time"
            app:layout_constraintTop_toBottomOf="@id/dept_name"
            app:layout_constraintTop_toTopOf="@id/time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txt_title_day"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="特休天數"
            android:textSize="15dp"
            android:textColor="@color/gray"
            app:layout_constraintLeft_toRightOf="@id/img_day"
            app:layout_constraintTop_toBottomOf="@id/dept_name"
            app:layout_constraintTop_toTopOf="@id/time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txt_day"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="7/15"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/img_day"
            app:layout_constraintTop_toTopOf="@id/txt_title_in"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/time"/>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/rv_function">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="〈"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="2021 June"
                    android:textColor="@color/purple"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="〉"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_date"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:clipToPadding="false"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardView_date_detail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/img_date_detail"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/background_date_detail"
                    app:layout_constraintTop_toTopOf="@+id/cardView_date_detail"
                    app:layout_constraintStart_toStartOf="parent" />
                <TextView
                    android:id="@+id/txt_date_detail_title1"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="日常班"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/img_date_detail"
                    app:layout_constraintLeft_toLeftOf="@+id/img_date_detail"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/txt_date_detail_time"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="09:00~18:00"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/txt_date_detail_title1"
                    app:layout_constraintLeft_toLeftOf="@+id/img_date_detail"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/txt_date_detail_title2"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="進卡"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/img_date_detail"
                    app:layout_constraintLeft_toRightOf="@+id/txt_date_detail_time"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/txt_date_detail_in"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="09:00"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/txt_date_detail_title2"
                    app:layout_constraintLeft_toRightOf="@+id/txt_date_detail_time"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/txt_date_detail_title3"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="出卡"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/img_date_detail"
                    app:layout_constraintLeft_toRightOf="@+id/txt_date_detail_in"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/txt_date_detail_out"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="09:00"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/txt_date_detail_title3"
                    app:layout_constraintLeft_toRightOf="@+id/txt_date_detail_in"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/txt_date_detail_title4"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="異常"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/img_date_detail"
                    app:layout_constraintLeft_toRightOf="@+id/txt_date_detail_out"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/txt_date_detail_err"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="遲到"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/txt_date_detail_title4"
                    app:layout_constraintLeft_toRightOf="@+id/txt_date_detail_out"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_notify"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
